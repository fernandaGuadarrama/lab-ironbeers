<div class="container">
  <h1>Random Beers</h1>
  <div class="row">
      {{#each beer}} 
    <img class="img-beers" src= {{this.image_url}} alt="beers">
    <h3>{{this.name}}</h3>
    <p>{{this.tagline}}</p>
    <p>{{this.description}}</p>
    <p>{{this.food-pairing}}</p>
    <p>{{this.brewer-tips}}</p>
      {{/each}}
  </div>
</div>
